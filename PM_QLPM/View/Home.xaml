                <materialDesign:Card Width="250">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="189" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Image Source="..//..//Resources/Images/card.jpg" Stretch="UniformToFill" Grid.Row="0" />
                        <StackPanel Grid.Row="1" Margin="10,25,10,15">
                            <TextBlock FontWeight="Bold" FontFamily="SegoeUI" FontSize="15"
                                       Margin="0 0 0 10">About this assignment</TextBlock>
                            <TextBlock FontFamily="SegoeUI" FontSize="15" TextWrapping="Wrap">Made by: <LineBreak/>
                                                                                              - Huynh Do Huy Tap <LineBreak/>
                                                                                              - Thai Bao Khang <LineBreak/>
